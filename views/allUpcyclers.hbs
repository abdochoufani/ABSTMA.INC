<main class="content">
  <h1 class="all-upcyclers-h1">People that are changing the world</h1>
  <div class="all-upcyclers-container">
    {{#each upcyclers}}
    <div class="upcycler-profile-div">
        <div class="upcycler-profile-img-div">
          {{#if imageUrl }}
          <img class="profile-img" src="{{ imageUrl }}" alt="Upcycler profile photo">
          {{else}}
          <img class="profile-img" src="/images/profile-placeholder.png" alt="Upcycler profile photo">
          {{/if}}
        </div>
        <p class="product-title">{{userName}}</p>
        <button class="submit-btn"><a href="/recycler/product?UpcyclerId={{id}}">See all products</a> </button>
    </div>

    {{/each}}
  </div>
</main>

