<main class="content">
    <div class="edit-form-container">
        <form class="edit-form" action="/recycler/edit/{{recycler._id}}" method="POST">
            <label for="firstName">First name:</label>
            <input class="input-edit" type="text" name="firstName" value="{{ recycler.firstName }}">
            <label for="lastName">Last name:</label>
            <input class="input-edit" type="text" name="lastName" value="{{ recycler.lastName }}">
            <label for="">Username:</label>
            <input class="input-edit" type="text" name="userName" value="{{ recycler.userName }}">
            <label for="">Company name:</label>
            <input class="input-edit" type="text" name="companyName" value="{{ recycler.companyName }}">
            <label for="">Email:</label>
            <input class="input-edit" type="email" name="email" value="{{ recycler.email }}">
            <label for="">Password:</label>
            <input class="input-edit" type="password" name="password">
            <label for="">Country:</label>
            <input class="input-edit" type="text" name="country" value="{{ recycler.address.country }}">
            <label for="">City:</label>
            <input class="input-edit" type="text" name="city" value="{{ recycler.address.city }}">
            <label for="">Street:</label>
            <input class="input-edit" type="text" name="street" value="{{ recycler.address.street }}">
            <label for="">Image url:</label>
            <input class="input-edit" type="text" name="imageUrl" value="{{ recycler.imageUrl }}">
            <label for="">Description:</label>
            <textarea name="description" cols="30" rows="10" placeholder="Write something about yourself"></textarea>
            <input class="submit-btn" type="submit">
        </form>
    </div>
</main>